---
import Layout from "../layouts/Layout.astro";
import RegisterForm from "../components/features/auth/components/RegisterForm";
---

<Layout title="Rejestracja - HealthyMeal">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4 max-w-md">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="text-center mb-6">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Utwórz konto</h1>
          <p class="text-gray-600">Zarejestruj się, aby rozpocząć korzystanie z aplikacji HealthyMeal.</p>
        </div>

        <RegisterForm client:visible />
      </div>
    </div>
  </main>
</Layout>
