---
import Layout from "../layouts/Layout.astro";
import PreferencesForm from "../components/features/preferences/components/PreferencesForm";

export const prerender = false;
---

<Layout title="Konfiguracja Preferencji - HealthyMeal">
  <main class="min-h-screen bg-gray-50 py-8" data-testid="preferences-page">
    <div class="container mx-auto px-4 max-w-2xl">
      <div class="bg-white rounded-lg shadow-md p-6" data-testid="preferences-container">
        <h1 class="text-3xl font-bold text-gray-900 mb-2" data-testid="preferences-title">Konfiguracja Preferencji</h1>
        <p class="text-gray-600 mb-8" data-testid="preferences-description">
          Skonfiguruj swoje preferencje żywieniowe, aby otrzymywać spersonalizowane przepisy dostosowane do Twoich
          potrzeb.
        </p>

        <PreferencesForm client:load />
      </div>
    </div>
  </main>
</Layout>
