---
import { getEnvVar } from "../lib/env";

// Debug page to check environment variables
const envVars = {
  SUPABASE_URL: !!getEnvVar("SUPABASE_URL"),
  SUPABASE_KEY: !!getEnvVar("SUPABASE_KEY"),
  OPENROUTER_API_KEY: !!getEnvVar("OPENROUTER_API_KEY"),
  NODE_ENV: getEnvVar("NODE_ENV"),
  // Check import.meta.env directly too
  importMetaEnv: Object.keys(import.meta.env),
};
---

<html>
  <head>
    <title>Debug Environment Variables</title>
  </head>
  <body>
    <h1>Environment Variables Debug</h1>
    <pre>{JSON.stringify(envVars, null, 2)}</pre>
  </body>
</html>
