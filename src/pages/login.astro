---
import Layout from "../layouts/Layout.astro";
import LoginForm from "../components/features/auth/components/LoginForm";

export const prerender = false;
---

<Layout title="Logowanie - HealthyMeal">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4 max-w-md">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="text-center mb-6">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Zaloguj się</h1>
          <p class="text-gray-600">Wprowadź swoje dane, aby uzyskać dostęp do aplikacji HealthyMeal.</p>
        </div>

        <LoginForm client:visible />
      </div>
    </div>
  </main>
</Layout>
